<%- include("partials/header.ejs") %>
<div class="container">
  <%- include("partials/headerbar.ejs") %>
  <div class="rest">
    <form action="/confirminfochange" method="POST">
      <div class="infobar">
        <div class="textandinput">
          <div>Họ và tên</div>
          <div>
            <input
              class="enter"
              name="hovaten"
              required
              value="<%if(locals.user){%><%=user.tennguoidung%><%}%>"
            />
          </div>
        </div>
        <div class="textandinput">
          <div>Email</div>
          <div>
            <input
              class="enter"
              type="email"
              name="email"
              required
              value="<%if(locals.user){%><%=user.email%><%}%>"
            />
          </div>
        </div>
        <div class="textandinput">
          <div>Số điện thoại</div>
          <div>
            <input
              class="enter"
              name="sdt"
              required
              value="<%if(locals.user){%><%=user.sdt%><%}%>"
            />
          </div>
        </div>
      </div>
      <div class="changepassbtn">
        <button
          class="passtxt"
          id="short1"
          class="headertext"
          type="submit"
          name="username"
          value="<%if(locals.user){%><%=user.tendangnhap%><%}%>"
          style="margin: 30px; border: none"
        >
          THAY ĐỔI THÔNG TIN
        </button>
      </div>
    </form>
  </div>
</div>
